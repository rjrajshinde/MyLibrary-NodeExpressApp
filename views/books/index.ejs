<div class="row mt-4 bookCards">
  <% data.forEach((book) => { %>
  <div class="col-6 mt-4">
    <div class="card">
      <img src="<%= book.coverImagePath %>" class="cardImg" alt="Book Cover" />
      <div class="card-body img-fluid">
        <div class="card-title">Title : <%- book.title%></div>
        <h3 class="card-author-name">Author : <%- book.authorName%></h3>
        <p class="card-text text-wrap">Description : <%- book.description%></p>
        <div class="card-date text-muted text-right">
          Publish Date : <%- moment(book.publishDate).format('MMMM d, YYYY');%>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
