<h1>Search Books</h1>
<form class="search-book-form" action="/books" method="GET">
  <div class="row">
    <div class="col-3">
      <label for="title" class="title">Title:</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<%= searchOptions.title %>"
      />
    </div>

    <div class="col-4">
      <label for="publishedAfter" class="publishedAfter"
        >Published After:</label
      >
      <input
        type="date"
        name="publishedAfter"
        id="publishedAfter"
        value="<%= searchOptions.publishedAfter %>"
      />
    </div>

    <div class="col-4">
      <label for="publishedBefore" class="publishedBefore">
        Published Before:</label
      >
      <input
        type="date"
        name="publishedBefore"
        id="publishedBefore"
        value="<%= searchOptions.publishedBefore %>"
      />
    </div>

    <div class="col-1">
      <button type="submit" class="btn-primary px-4">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </div>
</form>
